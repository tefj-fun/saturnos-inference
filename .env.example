SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Optional storage bucket (for trained model downloads)
SUPABASE_ARTIFACTS_BUCKET=training-artifacts

# Runtime
MODEL_ROOT=./models
MAX_MODELS=2
DEVICE=0
DEFAULT_CONFIDENCE=0.25
DEFAULT_IOU=0.45
DEFAULT_IMAGE_SIZE=640
DEFAULT_MAX_DETECTIONS=300
MAX_IMAGE_BYTES=10485760
IMAGE_FETCH_TIMEOUT=15
HEARTBEAT_INTERVAL=10

# Save predictions to Supabase
SAVE_PREDICTIONS=0
ALLOW_NULL_STEP_IMAGE=1

# CORS (comma-separated list). Leave empty to disable CORS headers.
# Example: http://localhost:5173,https://josephtsao.com
CORS_ALLOW_ORIGINS=
CORS_ALLOW_ORIGIN_REGEX=
CORS_ALLOW_METHODS=GET,POST,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept
CORS_ALLOW_CREDENTIALS=0
CORS_MAX_AGE=600

# Deployment registration
PUBLIC_BASE_URL=https://inference.josephtsao.com
REGISTER_DEPLOYMENTS=1
POLL_DEPLOYMENTS=1
DEPLOYMENT_POLL_INTERVAL=20
OVERWRITE_DEPLOYMENT_URL=0

# Optional worker metadata
WORKER_ID=
WORKER_DEVICE_TYPE=
WORKER_COMPUTE_TYPE=
WORKER_GPU_NAME=
WORKER_GPU_MODEL=
WORKER_GPU=
WORKER_GPU_MEMORY_GB=
WORKER_GPU_VRAM_GB=
WORKER_GPU_MEMORY_MB=
WORKER_GPU_VRAM_MB=
WORKER_CPU_MODEL=
WORKER_CPU=
WORKER_RAM_GB=

# Auto-update (optional)
AUTO_UPDATE_ENABLED=0
AUTO_UPDATE_INTERVAL=300
AUTO_UPDATE_REMOTE=origin
AUTO_UPDATE_BRANCH=
AUTO_UPDATE_ALLOW_DIRTY=0
AUTO_UPDATE_WAIT_FOR_IDLE=1
AUTO_UPDATE_MAX_WAIT=60
AUTO_UPDATE_RESTART_COMMAND=
